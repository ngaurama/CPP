CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98 -ggdb3
NAME = Materia
SRC = main.cpp IMateriaSource.cpp ICharacter.cpp AMateria.cpp Ice.cpp Cure.cpp Character.cpp MateriaSource.cpp
OBJ = $(SRC:.cpp=.o)

all: $(NAME)

$(NAME): $(OBJ)
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJ)

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
