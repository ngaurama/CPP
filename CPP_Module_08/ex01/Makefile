CPP = c++
CPPFLAGS = -Wall -Wextra -Werror -std=c++98

NAME = span
SRC = main.cpp Span.cpp

all: $(NAME)

$(NAME): $(SRC)
	$(CPP) $(CPPFLAGS) $(SRC) -o $(NAME)

clean:
	rm -f $(NAME)

fclean: clean

re: fclean all